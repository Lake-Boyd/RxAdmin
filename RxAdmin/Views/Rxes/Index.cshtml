@model IEnumerable<RxAdmin.Models.Rx>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.rxName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rxDose)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fillDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.refillDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.text)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rxName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rxDose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fillDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.refillDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.text)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
