@model RxAdmin.Models.Rx

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this prescription?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ID" />
        <dt>
            Patient ID
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.ID)
        </dd>
        <dt>
            Medication
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RxName)
        </dd>
        <dt>
            Dosage
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RxDose)
        </dd>
        <dt>
            Date Filled
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FillDate)
        </dd>
        <dt>
            Refill Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefillDate)
        </dd>
        <dt>
            Text Reminder
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt>
            Email Reminder
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>


<form asp-action="Delete">
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </div>
</form>
</div>
